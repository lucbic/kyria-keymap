config CIRQUE_PINNACLE
    bool "Cirque Pinnacle Touchpad"
    depends on I2C
    help
      Enable driver for Cirque Pinnacle Touchpad over I2C.

if CIRQUE_PINNACLE

config CIRQUE_PINNACLE_INIT_PRIORITY
    int "Cirque Pinnacle initialization priority"
    default 80
    help
      Initialization priority for the Cirque Pinnacle touchpad.

config CIRQUE_PINNACLE_THREAD_PRIORITY
    int "Priority of the Cirque Pinnacle touchpad thread"
    default 10
    help
      Priority of the touchpad thread.

config CIRQUE_PINNACLE_THREAD_STACK_SIZE
    int "Stack size for the Cirque Pinnacle touchpad thread"
    default 1024
    help
      Stack size for the touchpad thread.

config CIRQUE_PINNACLE_POLL_INTERVAL_MS
    int "Polling interval in milliseconds"
    default 10
    help
      Interval between polling the touchpad for new data.

config CIRQUE_PINNACLE_GESTURE_SUPPORT
    bool "Enable gesture support"
    default y
    help
      Enable support for multi-finger gestures.

endif # CIRQUE_PINNACLE
